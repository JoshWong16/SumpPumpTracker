<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="939dp"
        android:layout_above="@+id/btnYellow"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="73dp"
        android:layout_marginTop="235dp" />

    <Button
        android:id="@+id/btnRed"
        android:layout_width="117dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="137dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:background="#F44336"
        android:text="Red" />

    <Button
        android:id="@+id/btnGreen"
        android:layout_width="132dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="132dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/btnYellow"
        android:layout_toRightOf="@+id/btnYellow"
        android:background="#8BC34A"
        android:text="Green" />

    <Button
        android:id="@+id/btnYellow"
        android:layout_width="132dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="134dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/btnRed"
        android:layout_toRightOf="@+id/btnRed"
        android:background="#FFEB3B"
        android:text="Yellow" />

    <TextView
        android:id="@+id/colourSelec"
        android:layout_width="124dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="1183dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="195dp"
        android:text="Green"
        android:textColor="#8BC34A"
        android:textSize="24sp" />

</RelativeLayout>